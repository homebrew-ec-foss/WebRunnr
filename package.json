{
  "name": "webrunnr",
  "version": "1.0.0",
  "description": "A modular code execution platform supporting multiple programming languages",
  "private": true,
  "workspaces": [
    "packages/core",
    "packages/js-executor",
    "packages/py-executor",
    "packages/cpp-executor",
    "packages/java-executor",
    "packages/ts-executor",
    "packages/playground"
  ],
  "scripts": {
    "build": "pnpm run build ",
    "dev": "pnpm run dev ",
    "lint": "eslint packages/*/src/**/*.{ts,tsx,js,jsx}",
    "lint:fix": "eslint packages/*/src/**/*.{ts,tsx,js,jsx} --fix",
    "format": "prettier --write packages/*/src/**/*.{ts,tsx,js,jsx,json}",
    "format:check": "prettier --check packages/*/src/**/*.{ts,tsx,js,jsx,json}",
    "clean": "pnpm run clean ",
    "test": "pnpm run test "
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.0.0",
    "pyodide": "^0.28.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.0.0",
    "vite": "^7.0.6"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "tsc": "^2.0.4"
  }
}