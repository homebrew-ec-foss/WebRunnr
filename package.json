{
  "name": "webrunnr",
  "version": "1.0.0",
  "description": "A modular code execution platform supporting multiple programming languages",
  "private": true,
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "lint": "eslint packages/*/src/**/*.{ts,tsx,js,jsx}",
    "lint:fix": "eslint packages/*/src/**/*.{ts,tsx,js,jsx} --fix",
    "format": "prettier --write packages/*/src/**/*.{ts,tsx,js,jsx,json}",
    "format:check": "prettier --check packages/*/src/**/*.{ts,tsx,js,jsx,json}",
    "clean": "pnpm -r clean",
    "test": "pnpm -r test"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
