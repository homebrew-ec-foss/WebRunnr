{
  "name": "webrunnr",
  "version": "1.0.0",
  "description": "A modular code execution platform supporting multiple programming languages",
  "private": true,
  "workspaces": [
    "packages/core",
    "packages/js-executor",
    "packages/py-executor",
    "packages/java-executor",
    "packages/ts-executor",
    "packages/playground"
  ],
  "scripts": {
    "build": "pnpm -r run build",
    "build:prod": "pnpm -r run build && cd packages/playground && pnpm run build:prod",
    "dev": "pnpm -r run dev",
    "lint": "eslint packages/*/src/**/*.{ts,tsx,js,jsx}",
    "lint:fix": "eslint packages/*/src/**/*.{ts,tsx,js,jsx} --fix",
    "format": "prettier --write packages/*/src/**/*.{ts,tsx,js,jsx,json}",
    "format:check": "prettier --check packages/*/src/**/*.{ts,tsx,js,jsx,json}",
    "clean": "pnpm -r clean",
    "test": "pnpm -r test",
    "deploy": "pnpm run build:prod && vercel --prod",
    "deploy:netlify": "pnpm run build:prod && Copy-Item -Recurse packages/playground/dist deploy -Force",
    "preview:netlify": "cd deploy && python -m http.server 8080"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.0.0",
    "pyodide": "^0.28.0",
    "rollup": "^4.46.2",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "dependencies": {
    "tsc": "^2.0.4"
  }
}
